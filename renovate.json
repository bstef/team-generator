{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@vueuse"
      ],
      "groupName": "@vueuse packages",
      "groupSlug": "@vueuse"
    },
    {
      "matchPackagePrefixes": [
        "@types/"
      ],
      "groupName": "@types packages",
      "groupSlug": "@types"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  }
}