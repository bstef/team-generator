{
  "name": "teams-generator",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "zenstack": {
    "schema": "./prisma/schema.zmodel"
  },
  "scripts": {
    "build": "zenstack generate && prisma migrate deploy && nuxt build",
    "clean": "nuxt cleanup && rm -rf node_modules .generated .nuxt",
    "dev": "nuxt dev",
    "start": "node .output/server/index.mjs",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "zenstack generate && nuxt prepare",
    "playwright": "playwright",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "pnpm docker:up -d && playwright test && pnpm docker:down",
    "test:db": "pnpm docker:down && pnpm docker:up",
    "test:dev": "dotenv -e .env.test -- zenstack generate && prisma migrate dev && nuxt dev --dotenv .env.test",
    "test:ci": "dotenv -e .env.test -- zenstack generate && prisma migrate dev && nuxt build --dotenv .env.test && nuxt preview --dotenv .env.test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prisma": "prisma",
    "zenstack": "zenstack",
    "db:repl": "zenstack repl",
    "db:generate": "zenstack generate",
    "db:migrate": "prisma migrate",
    "playwright:ui": "playwright test --ui",
    "dotenv": "dotenv"
  },
  "devDependencies": {
    "@nuxt/eslint": "1.4.0",
    "@playwright/test": "^1.52.0",
    "@tanstack/eslint-plugin-query": "5.74.7",
    "@types/lodash-es": "4.17.12",
    "@types/msgpack-lite": "^0.1.11",
    "@types/node": "^22.15.18",
    "@vueuse/core": "^13.2.0",
    "@vueuse/nuxt": "^13.2.0",
    "@zenstackhq/tanstack-query": "^2.14.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "nuxt": "^3.17.3",
    "prisma": "^6.8.2",
    "vue-tsc": "^2.2.10",
    "zenstack": "2.14.2"
  },
  "dependencies": {
    "@hebilicious/vue-query-nuxt": "^0.3.0",
    "@iconify-json/ph": "^1.2.2",
    "@nuxt/ui": "^3.1.2",
    "@prisma/client": "^6.8.2",
    "@regle/core": "^1.2.2",
    "@regle/nuxt": "^1.2.2",
    "@regle/rules": "^1.2.2",
    "@regle/schemas": "^1.2.2",
    "@tanstack/vue-query": "^5.76.0",
    "@vueuse/components": "13.2.0",
    "@vueuse/router": "^13.2.0",
    "@zenstackhq/runtime": "2.14.2",
    "@zenstackhq/server": "^2.14.2",
    "html2canvas": "^1.4.1",
    "lodash-es": "4.17.21",
    "nanoid": "^5.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vue-slicksort": "^2.0.5",
    "zod": "^3.24.4"
  },
  "overrides": {
    "parse-url": "10.0.0"
  }
}
