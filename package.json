{
  "name": "teams-generator",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "zenstack": {
    "schema": "./zenstack/schema.zmodel"
  },
  "prisma": {
    "schema": "./zenstack/schema.prisma"
  },
  "scripts": {
    "build": "zenstack generate && prisma migrate deploy && nuxt build",
    "clean": "nuxt cleanup && rm -rf node_modules .generated .nuxt",
    "dev": "nuxt dev",
    "start": "node .output/server/index.mjs",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "zenstack generate && nuxt prepare",
    "playwright": "playwright",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "bun docker:up -d && playwright test && bun docker:down",
    "test:db": "bun docker:down && bun docker:up",
    "test:dev": "dotenv -e .env.test -- zenstack generate && prisma migrate dev && nuxt dev --dotenv .env.test",
    "test:ci": "dotenv -e .env.test -- zenstack generate && prisma migrate dev && nuxt build --dotenv .env.test && nuxt preview --dotenv .env.test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prisma": "prisma",
    "zenstack": "zenstack",
    "db:repl": "zenstack repl",
    "db:generate": "zenstack generate",
    "db:migrate": "prisma migrate",
    "playwright:ui": "playwright test --ui",
    "dotenv": "dotenv"
  },
  "devDependencies": {
    "@nuxt/eslint": "1.4.1",
    "@playwright/test": "^1.53.0",
    "@tanstack/eslint-plugin-query": "5.78.0",
    "@types/lodash-es": "4.17.12",
    "@types/msgpack-lite": "^0.1.11",
    "@types/node": "^24.0.3",
    "@vueuse/core": "^13.3.0",
    "@vueuse/nuxt": "^13.3.0",
    "@zenstackhq/tanstack-query": "^2.15.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "nuxt": "^3.17.5",
    "prisma": "^6.9.0",
    "vue-tsc": "^2.2.10",
    "zenstack": "2.15.1"
  },
  "dependencies": {
    "@formwerk/core": "^0.10.7",
    "@hebilicious/vue-query-nuxt": "^0.3.0",
    "@iconify-json/ph": "^1.2.2",
    "@nuxt/ui": "^3.1.3",
    "@prisma/client": "^6.9.0",
    "@tanstack/vue-query": "^5.80.7",
    "@vueuse/components": "13.3.0",
    "@vueuse/router": "^13.3.0",
    "@zenstackhq/runtime": "2.15.1",
    "@zenstackhq/server": "^2.15.1",
    "lodash-es": "4.17.21",
    "typescript": "^5.8.3",
    "vue-slicksort": "^2.0.5",
    "zod": "^3.25.67"
  }
}
